.order-item-info .item {font-size: 32rpx;height: 90rpx;line-height: 90rpx;padding: 0 30rpx;border-bottom: 1rpx solid #e5e5e5;}
.order-item-info .item.icon-arrow .info{background: url(../../images/icon-arrow.png) center right no-repeat;-webkit-background-size: 7px 16px;
background-size: 10rpx 20rpx;padding-right: 40rpx;}
.order-item-info .item input {height: 50rpx;line-height: 50rpx;font-size: 24rpx;border: 1px solid #e5e5e5;border-radius:3px;padding: 5rpx 20rpx;}
.order-god-info .avatar {text-align: center;padding: 20rpx 0;}
.order-god-info .avatar .photo image {width: 150rpx;height: 150rpx;}
.order-god-info .avatar .name {padding-top: 15rpx;font-size: 32rpx;}
.order-mark textarea {height: 160rpx;padding: 20rpx;}
.local-search-blk {position: fixed;width: 100%;height: 100%;overflow-y: auto;top:0;left:0;background: #f2f2f2;z-index: 10;}
.local-search {padding: 15rpx;position: relative;}
.local-search .search-input icon {position: absolute;z-index: 9;top:30rpx;left:35rpx;}
.local-search .search-input input {width: 570rpx;height: 56rpx;line-height: 56rpx;border-radius: 3px;padding-left: 60rpx;background: #fff;}
.local-search .quit {font-size: 32rpx;padding-right: 5rpx;}
.local-list .item {background: #fff;border-bottom: 1px solid #e5e5e5;padding: 25rpx 60rpx;}
.local-list .item .name {font-size: 28rpx;margin-bottom: 5px;}
.local-list .item .address {font-size: 24rpx;color:#9b9b9b;}
